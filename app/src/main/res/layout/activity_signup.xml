<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plantopia.plantopia.SignupActivity">

    <TextView
        android:id="@+id/tvEmailSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="28dp"
        android:text="Email" />

    <EditText
        android:id="@+id/etEmailSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvEmailSign"
        android:layout_alignStart="@+id/tvEmailSign"
        android:layout_below="@+id/tvEmailSign"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_login"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="eg:xyx@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvPasswordSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etEmailSign"
        android:layout_alignStart="@+id/etEmailSign"
        android:layout_below="@+id/etEmailSign"
        android:layout_marginTop="14dp"
        android:text="Create Password" />

    <EditText
        android:id="@+id/etPasswordSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPasswordSign"
        android:layout_alignStart="@+id/tvPasswordSign"
        android:layout_below="@+id/tvPasswordSign"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_login"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordSign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_login"
        android:text="Create Account" />

    <ProgressBar
        android:id="@+id/pbCreate"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmailSign"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
